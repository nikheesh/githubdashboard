<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/singlename"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/singleimg"
        android:layout_below="@+id/singleimg"
        android:layout_marginTop="19dp" 
       />

    <com.parse.ParseImageView
        android:id="@+id/singleimg"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:maxHeight="50dp"
        android:maxWidth="200dp"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

    <TextView
        android:id="@+id/singleage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/singlename"
        android:layout_alignRight="@+id/singlename"
        android:layout_centerVertical="true"
        android:ems="10" />

    <Button
        android:id="@+id/singlebtnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/singleage"
        android:layout_below="@+id/singleage"
        android:layout_marginRight="45dp"
        android:layout_marginTop="18dp"
        android:text="Back" />

</RelativeLayout>